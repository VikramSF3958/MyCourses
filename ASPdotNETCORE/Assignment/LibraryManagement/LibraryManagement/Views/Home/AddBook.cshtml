@model Books

@{
    ViewBag.Title = "Add Books";
}


<form asp-controller="home" asp-action="AddBook" method="post" class="was-validated">
    <div class="card">
        <div class="card-header bg-info mt-3">
            <h2>Add Book</h2>
        </div>
        <div class="card-body">
            <div class="mb-3 mt-3 col-5">
                <label asp-for="Bookname" class="float-left">Book Name: </label>
                <input type="text" id="BooknameId" class="form-control " placeholder="Enter Book Name" asp-for="Bookname" required />
                <span asp-validation-for="Bookname" class="text-danger"></span>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="mb-3 col-5">
                <label asp-for="Authorname" class="float-left">Author Name: </label>
                <input type="text" id="Authorname" class="form-control" placeholder="Enter Author Name" asp-for="Authorname" />
                <span asp-validation-for="Authorname" class="text-danger"></span>
            </div>

            <div class="mb-3 col-5">
                <label asp-for="Publishedyear" class="float-left">Published Year: </label>
                <input type="number" id="Publishedyear" class="form-control" placeholder="Enter Published Year" asp-for="Publishedyear" />
                <span asp-validation-for="Publishedyear" class="text-danger"></span>
            </div>

            <div class="mb-3 col-5">
                <label asp-for="Price" class="float-left">Book Price: </label>
                <input type="number" id="Price" class="form-control" placeholder="Enter Book Price" asp-for="Price" />
            </div>

            <div class="mb-3 col-5">
                <label asp-for="Bookcategoryid" class="float-left">Book Category: </label>
                <select asp-for="Bookcategoryid" class="form-control "
                        asp-items="@(new SelectList(ViewBag.ItemList, "Cateogoryid", "Cateogoryname"))">
                </select>
            </div>
        </div>

    </div>

    <div class=" mt-2 mb-3 col-5">
        <button type="submit" class="btn btn-outline-success col-2 buttonMargin">Add</button>
        <a asp-action="index" asp-controller="home" class="btn btn-outline-danger col-3  buttonMargin">Cancel</a>
    </div>

</form>
