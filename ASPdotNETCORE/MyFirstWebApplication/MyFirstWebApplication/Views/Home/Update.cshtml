@model Employee

@{ 
    ViewBag.Title = "Update";
}

<form asp-controller="Home" asp-action="Update" method="post" class="was-validated">
    <div class="mb-3 mt-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" id="Name" placeholder="Enter Your Name" asp-for="Name" required>
        <label asp-for="id" class="form-label"></label>
        <input type="number" class="form-control" id="id" placeholder="Enter Your id" asp-for="id" required>
        <span asp-validation-for="Name"></span>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>


